<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.api.domain.account.mapper.AccountFindMapper">

	<select id="findAccountById" resultType="Account">
		SELECT
			*
		FROM
			accounts
		WHERE
			id = #{id}
	</select>
	
	<select id="findAccountByName" resultType="Account">
		SELECT
			*
		FROM
			accounts
		WHERE
			name = #{name}
	</select>
	
	<select id="findAccountByEmail" resultType="Account">
		SELECT
			*
		FROM
			accounts
		WHERE
			email = #{email}
	</select>
	
</mapper>

